<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="112dp"
    android:layout_marginBottom="5dp"
    android:background="@color/design_default_color_background">

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/movImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        
        <TextView
            android:id="@+id/movTitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="제목"
            android:textSize="@dimen/mov_title"
            android:textStyle="bold"/>
        
        <TextView
            android:id="@+id/movRelease"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:text="개봉일"
            android:textSize="@dimen/mov_subTitle"/>

        <TextView
            android:id="@+id/movDirector"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:text="감독"
            android:textSize="@dimen/mov_director"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/commentTxt"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="댓글 달기"
                android:textSize="13sp"
                android:textColor="@color/design_default_color_background"
                android:background="@drawable/rank_border"/>

            <ImageView
                android:id="@+id/favorImg"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:src="@drawable/ic_favorite_border_orange_24dp" />

        </LinearLayout>

        
    </LinearLayout>
    
    
    
</LinearLayout>