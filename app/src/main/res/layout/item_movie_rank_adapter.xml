<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/rank_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:weightSum="4"
        android:orientation="horizontal">

        <!--순위는 네모낳게 따로 만들어서 넣어준다. -->
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/colorOrange">

            <TextView
                android:id="@+id/rankTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="순위"
                android:textColor="#fff"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/movieNameTxt"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="영화명"/>

        <!--<TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="개봉일"/>-->

        <TextView
            android:id="@+id/audiAccTxt"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="누적 관객 수"/>

        <ImageView
            android:id="@+id/stateImg"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_equal_black_24dp"/>

        <TextView
            android:id="@+id/rankIntenTxt"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="변동폭"/>
    </LinearLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000000" />-->

</LinearLayout>